---
import { formatDate, formatTag } from "../lib/helpers";
import type { MarkdownLayoutProps } from "astro";
import BasicLayout from "./BasicLayout.astro";
import { Icon } from "astro-icon/components";
import Navbar from "../components/Navbar.astro";
import { fade, slide } from "astro:transitions";

type Props = MarkdownLayoutProps<{
  title: string;
  category: string;
  description: string;
  pubDate: string;
  minutesRead: string;
  image: string;
  projectURL: string;
  repoURL: string;
  tags: string[];
}>;

const { slug } = Astro.params;
const { frontmatter } = Astro.props;
---

<BasicLayout
  frontmatter={frontmatter}
  slug={slug}
  page="blog"
  title={`engage-bento - ${frontmatter.title}`}
  description={frontmatter.description}
>
  <Navbar />

  <main
    transition:name="pageFade"
    class="mx-auto max-w-xl w-full p-2 md:py-5 text-neutral-100"
  >
    <!-- <hr class="border-[.5px] border-gray-100/10 mb-5" /> -->

    <div
      class="w-fit px-2 py-1 rounded rounded-b-none border-b-none border border-gray-500 text-neutral-100/70 capitalize text-sm"
    >
      {frontmatter.category}
    </div>
    <div class="border-t border-gray-500">
      <div class="flex justify-between mt-2 text-gray-500 text-sm">
        <p>{formatDate(new Date(frontmatter.pubDate))}</p>
        <p>{frontmatter.minutesRead}</p>
      </div>

      <div
        transition:animate={fade({ duration: ".25s" })}
        class="text-5xl f-bold mt-2"
      >
        {frontmatter.title}
      </div>
      <div
        transition:animate={fade({ duration: ".25s" })}
        class="text-neutral-100/70"
      >
        {frontmatter.description}
      </div>

      <div class="mt-5 text-neutral-100/70 f-light text-sm">Technologies:</div>

      <div
        transition:animate={fade({ duration: ".5s" })}
        class="flex gap-1 w-full overflow-scroll mb-2"
      >
        {
          frontmatter.tags.map((tag) => (
            <a
              href={`/tags/${formatTag(tag)}`}
              class="no-underline hover:no-underline text-sm bg-gray-700 text-neutral-100 rounded px-2 py-1 lowercase whitespace-nowrap"
            >
              #{tag}
            </a>
          ))
        }
      </div>

      <a href={frontmatter.projectURL || ""}>
        <img
          transition:animate={fade({ duration: ".75s" })}
          src={frontmatter.image}
          alt=""
          class="border border-gray-500/50 w-full object-cover h-64"
        />
      </a>
    </div>

    <div
      transition:animate={fade({ duration: "1.25s" })}
      class="flex items-center gap-2 mt-2"
    >
      {
        frontmatter.projectURL && (
          <a href={frontmatter.projectURL}>
            <button class="text-white border rounded py-2 px-4 border-gray-500">
              Go to App
            </button>
          </a>
        )
      }
      {
        frontmatter.repoURL && (
          <a href={frontmatter.repoURL}>
            <button class="text-white border rounded py-2 px-4 border-gray-500">
              Repository
            </button>
          </a>
        )
      }
    </div>

    <article
      transition:animate={fade({ duration: "2s" })}
      class="prose prose-p:text-purple-500 prose-slate prose-invert"
    >
      <slot />
    </article>
  </main>
</BasicLayout>

<style is:global>
  ::-webkit-scrollbar {
    display: none;
  }
</style>
