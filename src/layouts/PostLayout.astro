---
import { formatDate, formatTag } from "../lib/helpers";
import type { MarkdownLayoutProps } from "astro";
import BasicLayout from "./BasicLayout.astro";
import { Icon } from "astro-icon/components";

type Props = MarkdownLayoutProps<{
  title: string;
  category: string;
  description: string;
  pubDate: string;
  minutesRead: string;
  image: string;
  projectURL: string;
  repoURL: string;
  tags: string[];
}>;

const { slug } = Astro.params;
const { frontmatter } = Astro.props;
---

<BasicLayout
  frontmatter={frontmatter}
  slug={slug}
  page="blog"
  title={`engage-bento - ${frontmatter.title}`}
  description={frontmatter.description}
>
  <div class="sticky top-0 w-full max-w-xl mx-auto px-2 bg-darkslate-700">
    <div class="mx-auto">
      <div class="flex justify-between items-center">
        <div class="flex items-center gap-2">
          <a
            href="/"
            class="py-2 flex items-center justify-center px-4 border border-gray-500 rounded text-neutral-100"
          >
            <Icon name="mdi:home" class="w-5 h-5 inline-block" />
          </a>
          <a
            href="/projects"
            class="py-2 flex items-center justify-center px-4 border border-gray-500 rounded text-neutral-100"
          >
            <Icon name="material-symbols:code" class="w-5 h-5 inline-block" />
          </a>

          <a
            href="/now"
            class="py-2 flex items-center justify-center px-4 border border-gray-500 rounded text-neutral-100"
          >
            <Icon name="carbon:blog" class="w-5 h-5 inline-block" />
          </a>
        </div>

        <div class="text-lg font-bold text-neutral-100 p-4">
          <a
            href="javascript:history.back()"
            class="flex items-center gap-1 group text-neutral-100 no-underline hover:no-underline hover:text-neutral-200 transition-all duration-300"
          >
            <Icon
              name="mdi:arrow-left"
              class="w-5 h-5 inline-block md:group-hover:-translate-x-1 transition-all duration-300"
            />
            <div>back</div>
          </a>
        </div>
      </div>
    </div>
  </div>

  <main class="mx-auto max-w-xl w-full p-2 md:py-5 text-neutral-100">
    <!-- <hr class="border-[.5px] border-gray-100/10 mb-5" /> -->

    <div
      class="w-fit px-2 py-1 rounded rounded-b-none border-b-none border border-gray-500 text-neutral-100/70 capitalize text-sm"
    >
      {frontmatter.category}
    </div>
    <div class="border-t border-gray-500">
      <div class="text-5xl f-bold mt-5">
        {frontmatter.title}
      </div>
      <div class="text-neutral-100/70">
        {frontmatter.description}
      </div>

      <div class="mt-5 text-neutral-100/70 f-light text-sm">Technologies:</div>

      <div class="flex gap-1 w-full overflow-scroll">
        {
          frontmatter.tags.map((tag) => (
            <a
              href={`/tags/${formatTag(tag)}`}
              class="text-sm hover:no-underline no-underline bg-gray-700 text-neutral-100 rounded px-2 py-1 lowercase whitespace-nowrap"
            >
              #{tag}
            </a>
          ))
        }
      </div>

      <div class="flex justify-between mt-5 text-gray-500 text-sm">
        <p>{formatDate(new Date(frontmatter.pubDate))}</p>
        <p>{frontmatter.minutesRead}</p>
      </div>

      <a href={frontmatter.projectURL || ""}>
        <img
          src={frontmatter.image}
          alt=""
          class="border border-gray-500/50 w-full object-cover h-64"
        />
      </a>
    </div>

    <div class="flex items-center gap-2 mt-2">
      {
        frontmatter.projectURL && (
          <a href={frontmatter.projectURL}>
            <button class="text-white border rounded py-2 px-4 border-gray-500">
              Go to App
            </button>
          </a>
        )
      }
      {
        frontmatter.repoURL && (
          <a href={frontmatter.repoURL}>
            <button class="text-white border rounded py-2 px-4 border-gray-500">
              Repository
            </button>
          </a>
        )
      }
    </div>

    <article class="prose prose-p:text-purple-500 prose-slate prose-invert">
      <slot />
    </article>
  </main>
</BasicLayout>

<style is:global>
  ::-webkit-scrollbar {
    display: none;
  }
</style>
