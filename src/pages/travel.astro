<script>
  import { timeline, type TimelineDefinition } from "motion";

  const sequence = [
    [
      ".loaderRef", // The CSS selector for the element(s) to animate
      { opacity: [1, 0], pointerEvents: "none" }, // Starting and ending states
      {
        easing: "ease-out", // The easing function
        duration: 2, // Duration in seconds
      },
    ],
  ];

  timeline(sequence as TimelineDefinition);
</script>

<BasicLayout
  title="Josh Chadwick - Visited Countries"
  description="A 3d globe showing countries that I have visited so far"
  page="travel"
>
  <Navbar />

  <div class="w-full flex justify-center scale-95">
    <Globe client:load />
  </div>
</BasicLayout>
