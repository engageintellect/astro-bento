---
interface Props {
  rounded?: boolean;
}

const { rounded } = Astro.props;
---

<div class="md:hover:scale-[98%] duration-200 ease-in-out transition-all">
  <button
    class={`custom-btn flex items-center justify-center text-xl shadow-custom shadow-gray-500 active:shadow-none active:translate-x-[3px] active:translate-y-[3px] text-neutral-100 px-4 py-2 border border-gray-500 transition-colors duration-100 ease-in-out bg-darkslate-700 cursor-pointer ${
      rounded ? "rounded-full" : "rounded-lg"
    }`}
  >
    <div class="">
      <slot />
    </div>
  </button>
</div>
