---
import Card from "./Card/index.astro";
import { LINKS } from "../lib/constants";
import Button from "./Button.astro";
import { Icon } from "astro-icon/components";
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-4">
  <div class="h-full">
    <header class="flex items-center">
      <h1 class="text-white text-2xl f-bold">Let's get to work!</h1>
    </header>
    <div class="flex flex-col mt-4">
      <div class="text-neutral-100/70">Contact Details</div>

      <div class="w-full mt-2">
        <a href={`mailto:${LINKS.email}`} aria-label="email me">
          <Button aria-label="github profile">
            <div class="flex items-center gap-2">
              <Icon name="ri:mail-fill" class="h-5 w-5" />
              <div>email me</div>
              <span class="sr-only">GitHub Profile</span>
            </div>
          </Button>
        </a>
        <!-- <p class="pt-2 text-sm">Orange County, CA</p> -->
      </div>
      <div class="flex flex-col mt-4 w-fit">
        <h2 class="text-neutral-100/70">Socials</h2>
        <ul>
          <li>
            <a
              href={LINKS.linkedin}
              target="_blank"
              class="flex items-center gap-2"
            >
              <Icon name="ri:linkedin-fill" class="h-5 w-5" />
              <div>LinkedIn</div>
            </a>
          </li>
          <li>
            <a
              href={LINKS.github}
              target="_blank"
              class="flex items-center gap-2"
            >
              <Icon name="ri:github-fill" class="h-5 w-5" />
              <div>Github</div>
            </a>
          </li>
          <li>
            <a
              href={LINKS.medium}
              target="_blank"
              class="flex items-center gap-2"
            >
              <Icon name="ri:medium-fill" class="h-5 w-5" />
              <div>Medium</div>
            </a>
          </li>
          <li>
            <a
              href={LINKS.discord}
              target="_blank"
              class="flex items-center gap-2"
            >
              <Icon name="ri:discord-fill" class="h-5 w-5" />
              <div>Discord</div>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</Card>
